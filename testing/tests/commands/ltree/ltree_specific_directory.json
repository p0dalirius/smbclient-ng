{
    "title": "Command 'ltree': displays a tree view of a specific local directory",
    "category": "commands",
    "subcategory": "ltree",
    "parameters": {
        "-d": "{auth_domain}",
        "-u": "{auth_username}",
        "-p": "{auth_password}",
        "--host": "{target_host}"
    },
    "smbclientng_commands": [
        "ltree 'C:\\Users\\John\\Documents'"
    ],
    "expected_output": {
        "messages": [
            "Directory tree for 'C:\\Users\\John\\Documents':",
            "Documents",
            "|-- file.txt",
            "`-- Projects",
            "    |-- Project1",
            "    |   `-- project_file1.txt",
            "    `-- Project2",
            "        `-- project_file2.txt"
        ],
        "error": false,
        "traceback": false
    }
}
